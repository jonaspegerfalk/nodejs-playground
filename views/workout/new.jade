extends ../layout

block content
  .page-header
    h3 Start a new workout
    

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='date') Date
      .col-sm-8
        input.form-control(type='date', name='date', id='date', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='time') Time
      .col-sm-8
        input.form-control(type='time', name='time', id='time')
    .form-group
      label(class='col-sm-2 control-label', for='Location') Location
      .col-sm-8
        input.form-control(name='location', id='location')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Start
